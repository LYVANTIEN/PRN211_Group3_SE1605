    <title>Login</title>
    <style>
        .bg-image-vertical {
            position: relative;
            overflow: hidden;
            background-repeat: no-repeat;
            background-position: right center;
            background-size: auto 100%;
        }



        .logocinema {
            background: url() center center no-repeat;
            background-size: 100% 100%;
            width: 165px;
            height: 65px;
            display: block;
        }

        .btn-infomation {
            color: #fff;
            background-color: #fd7e4bdb;
            border-color: #fd7e4bdb;
            border: none;
            padding: 8px 22px;
            border-radius: 12px;
        }

            .btn-infomation:hover {
                opacity: 0.8;
            }

        .item img {
            height: 500px;
        }



        .owl-theme .owl-dots .owl-dot {
            display: none;
            zoom: 1;
        }
    </style>


<body>
    <section class="vh-100">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6 text-black">

                    

                    <div class="d-flex align-items-center  px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                        <form style="width: 23rem;" asp-controller="Account" asp-action="CheckLogin">

                            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">ĐĂNG NHẬP</h3>

                            <div class="form-outline mb-4">
                                <input type="text" id="form2Example18" name="username" class="form-control form-control-lg"
                                       placeholder="Email Address" />
                            </div>

                            <div class="form-outline mb-4">
                                <input type="password" id="form2Example28" name="password" class="form-control form-control-lg"
                                       placeholder="Password" />
                            </div>

                            <div class="pt-1 mb-4">
                                <button class="btn-infomation" type="submit">Login</button>
                            </div>

                            <p>Bạn Không Có Tài Khoản? <a asp-controller="Account" asp-action="Register" class="link-info">Đăng Ký Ngay</a></p>

                        </form>

                    </div>

                </div>
