    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/css/owl.theme.default.min.css">
    <title>Sign Up</title>
    <style>
        .bg-image-vertical {
            position: relative;
            overflow: hidden;
            background-repeat: no-repeat;
            background-position: right center;
            background-size: auto 100%;
        }



        .logocinema {
            background: url() center center no-repeat;
            background-size: 100% 100%;
            width: 165px;
            height: 65px;
            display: block;
        }

        .btn-infomation {
            color: #fff;
            background-color: #fd7e4bdb;
            border-color: #fd7e4bdb;
            border: none;
            padding: 8px 22px;
            border-radius: 12px;
        }

            .btn-infomation:hover {
                opacity: 0.8;
            }

        .item img {
            height: 500px;
        }



        .owl-theme .owl-dots .owl-dot {
            display: none;
            zoom: 1;
        }
    </style>
</head>

<body>
    <section class="vh-100">
        <div class="container-fluid">
            <div class="row">
                @*<div class="col-sm-6 px-0 d-none d-sm-block">
                <div class="owl-carousel owl-theme">
                <img src="https://cdn.galaxycine.vn/media/2023/9/8/nta-t9-digital-2048x682_1694162460479.jpg"
                alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
                <img src="https://cdn.galaxycine.vn/media/2023/8/22/zalopay-1_1692686936988.jpg" alt="Login image"
                class="w-100 vh-100" style="object-fit: cover; object-position: left;">
                </div>
                </div>*@
                <div class="col-sm-6 text-black">

                    <div class="px-5 ms-xl-4">
                        <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
                        <a href="/home" class="logocinema h1 fw-bold mb-0"></a>
                    </div>

                    <div class="d-flex align-items-center  px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                        <form style="width: 23rem;" asp-controller="Account" asp-action="Register">

                            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">ĐĂNG KÝ</h3>
                            <div class="form-outline mb-4">
                                <input type="email" name="email" id="form2Example18" class="form-control form-control-lg"
                                       placeholder="Email Address" />
                            </div>
                            <div class="form-outline mb-4">
                                <input type="text" name="username" id="form2Example18" class="form-control form-control-lg"
                                       placeholder="Username" />
                            </div>

                            <div class="form-outline mb-4">
                                <input type="password" name="password" id="form2Example28" class="form-control form-control-lg"
                                       placeholder="Password" />
                            </div>
                            <div class="form-outline mb-4">
                                <input type="password" id="form2Example28" class="form-control form-control-lg"
                                       placeholder="Confirm Password" />
                            </div>
                            <div class="form-outline mb-4">
                                <input type="number" name="phone" id="form2Example28" class="form-control form-control-lg"
                                       placeholder="Phone" />
                            </div>
                            <div class="form-outline mb-4 hidden">
                                <input type="password" name="role" value="u" id="form2Example28" class="form-control form-control-lg" />
                            </div>
                            <div class="form-outline mb-4 hidden">
                                <input type="password" name="Baned" value="0" id="form2Example28" class="form-control form-control-lg" />
                            </div>
                            <div class="pt-1 mb-4">
                                <button class="btn-infomation" type="submit">Đăng ký</button>
                            </div>

                            <p>Bạn Có Tài Khoản? <a asp-controller="Account" asp-action="Login" class="link-info">Đăng Nhập Ngay</a></p>

                        </form>

                    </div>

                </div>

            </div>
        </div>
    </section>
</body>
<script src="/js/jquery.js"></script>
<script src="/js/owl.carousel.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/js/bootstrap.min.js"
