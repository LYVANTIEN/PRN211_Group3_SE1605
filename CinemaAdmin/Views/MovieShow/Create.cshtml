@model DataAccess.MovieShow

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Home/Index" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/movie" class="nav-link">Movie Management</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Add new</a>
        </li>
    </ul>
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Add new movie show</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/movie/index">Home</a></li>
                        <li class="breadcrumb-item active">Add new movie show</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        @using (Html.BeginForm("Create", "MovieShow", FormMethod.Post, new { }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            <!-- your steps content here -->
                            <div class="card">

                                <div class="card-body">
                                    <div class="tab-content">
                                        <div class="active tab-pane" id="activity">
                                            <div class="form-group">
                                                <label for="exampleInputEmail1">Show time</label>
                                                @Html.EditorFor(x => x.ShowTime, new { @class = "form-control", @placeholder = "Show time of movie" })
                                                @Html.ValidationMessageFor(x => x.ShowTime, null, new { @class = "text-danger" })
                                            </div>
                                            <div class="form-group">
                                                <label for="exampleInputEmail1">Movie Name</label>
                                                @Html.DropDownListFor(x => x.MovieId, ViewBag.Movie as SelectList, "Choose the movie name", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(x => x.MovieId, null, new { @class = "text-danger" })
                                            </div>
                                            <div class="form-group">
                                                <label for="exampleInputEmail1">Theater hall name</label>
                                                @Html.DropDownListFor(x => x.TheaterHallId, ViewBag.TheaterHall as SelectList, "Choose the theater hall name", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(x => x.TheaterHallId, null, new { @class = "text-danger" })
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <!-- /.tab-content -->

                            </div>

                            <!-- /.card-body -->
                            <div class="text-center" style="margin-bottom:10px">
                                <button type="submit" class="btn btn-success">Add new</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
            </div>
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
